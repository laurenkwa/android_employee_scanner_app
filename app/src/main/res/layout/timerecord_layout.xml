<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <TextView android:id="@+id/timeIn" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:paddingLeft="5dp"
              android:textSize="12sp"
              android:layout_marginLeft="8dp"
              android:text="Title"
    />

    <TextView android:id="@+id/timeOut" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/timeIn"
              android:textColor="@color/colorAccent"
              android:textSize="12sp"
              android:layout_marginLeft="8dp"
              android:paddingLeft="5dp"
              android:text="Description"
    />

</RelativeLayout>